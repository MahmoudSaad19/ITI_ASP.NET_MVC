@model CRUD_Operations_with_DB_Context.Models.Product

@{
    ViewBag.Title = "Update";
}

    <section>
        <div style="height:30px">

        </div>
        <div style="height:400px; text-align:center;" class="d-flex">
            <form class="form-row d-flex" action="/Product/update2" method="get">
                <div class="col-md-2 d-md-inline"></div>
                <label class="d-md-inline col-md-2">ID</label>
                <input type="text" name="ID" value="@Model.ID" class="d-md-inline col-md-6" readonly />
                <br />
                <br />
                <div class="col-md-2 d-md-inline"></div>
                <label class="d-md-inline col-md-2">Product Name</label>
                <input type="text" name="ProductName" value="@Model.ProductName" class="d-md-inline col-md-6" />
                <br />
                <br />
                <div class="col-md-2 d-md-inline"></div>
                <label class="d-md-inline col-md-2">Product Price</label>
                <input type="text" name="Price" value="@Model.Price" class="d-md-inline col-md-6" />
                <br />
                <br />
                <div class="col-md-2 d-md-inline"></div>
                <label class="d-md-inline col-md-2">Units in Stock</label>
                <input type="text" name="Units" value="@Model.Units" class="d-md-inline col-md-6" />
                <br />
                <br />
                <div class="col-md-2 d-md-inline"></div>
                <label class="d-md-inline col-md-2">Supplier Name</label>
                <input type="text" name="SupplierID" value="@Model.SupplierID" class="d-md-inline col-md-6" />
                <br />
                <br />
                <input type="submit" class="btn btn-success" />
            </form>
