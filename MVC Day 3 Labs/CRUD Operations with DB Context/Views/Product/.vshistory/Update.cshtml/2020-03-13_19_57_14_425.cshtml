    ViewBag.Title = "Update";
}

    <section>
        <div style="height:30px">

        </div>
        <div style="height:600px; text-align:center;">
            <form class="form-row d-flex" action="/Product/update" method="post">
                <div class="form-row">
                    <div class="form-group col-md-2"></div>
                    <div class="form-group col-md-2">
                        <label>Email</label>
                        <br />
                        <label>Email</label>
                        <br />
                        @Html.LabelFor(p=>p.ID)
                    </div>
                    <div class="form-group col-md-6">
                        <input class="form-control">
                        <input class="form-control">
                        <input class="form-control">
                    </div>
                    <div class="form-group col-md-2"></div>
                </div>
                <div class="form-row">
                    <label class="d-inline">ID</label>
                    @Html.LabelFor(p => p.ID)

                    <input type="text" name="ID" value="@Model.ID" readonly />
                </div>

                <br />
                <label class="col-md-5 d-md-inline">Product Name</label>
                <input type="text" name="Name" value="@Model.ProductName" class="form-control col-md-7 d-md-inline" />
                <br />
                <label>Product Price</label>
                <input type="text" name="Age" value="@Model.Price" class="form-control" />
                <br />
                <label>Units in Stock</label>
                <input type="text" name="Address" value="@Model.Units" class="form-control" />
                <br />
                <input type="submit" class="btn btn-success" />
            </form>
