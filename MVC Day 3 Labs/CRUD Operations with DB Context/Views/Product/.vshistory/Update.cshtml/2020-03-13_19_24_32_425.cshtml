    ViewBag.Title = "Update";
}

    <section>
        <div style="height:500px; text-align:center;">
                <form class="form-row col-lg-6 d-flex" action="/Product/update" method="post">
                    <label class="d-inline">ID</label>
                    <input type="text" name="ID" value="@Model.ID" class="form-control d-inline-flex col-8" readonly />
                    <br />
                    <label>Product Name</label>
                    <input type="text" name="Name" value="@Model.ProductName" class="form-control" />
                    <br />
                    <label>Product Price</label>
                    <input type="text" name="Age" value="@Model.Price" class="form-control" />
                    <br />
                    <label>Units in Stock</label>
                    <input type="text" name="Address" value="@Model.Units" class="form-control" />
                    <br />
                    <input type="submit" class="btn btn-success" />
                </form>
