@model CRUD_Operations_with_DB_Context.Models.Product

@{
    ViewBag.Title = "Update";
}

    <section>
        <div style="height:500px">
            <center>
                <form class="form-group col-lg-6" action="/student/update">
                    <label>ID</label>
                    <input type="text" name="ID" value="@Model.ID" class="form-control" readonly />
                    <br />
                    <label>Product Name</label>
                    <input type="text" name="Name" value="@Model.ProductName" class="form-control" />
                    <br />
                    <label>Product Price</label>
                    <input type="text" name="Age" value="@Model.Price" class="form-control" />
                    <br />
                    <label>Units in Stock</label>
                    <input type="text" name="Address" value="@Model.Units" class="form-control" />
                    <br />
                    <input type="submit" class="btn btn-success" />
                </form>
            </center>
        </div>

    </section>

