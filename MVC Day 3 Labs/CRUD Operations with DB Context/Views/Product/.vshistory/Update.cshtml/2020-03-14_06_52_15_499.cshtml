@model CRUD_Operations_with_DB_Context.Models.Product

@{
    ViewBag.Title = "Update";
}

<div style="height:30px">

</div>

<div style="height:380px; text-align:center;" class="d-flex">
    @using (Html.BeginForm("insert", "product", FormMethod.Post, htmlAttributes: new { @class = "form-row d-flex" }))
    {
        <label class="d-md-inline col-md-2">Product Name</label>
        @Html.TextBoxFor(p => p.ProductName, htmlAttributes: new { @class = "d-md-inline col-md-6" , value= "@Model.ProductName" })
        @Html.ValidationMessageFor(p => p.ProductName, "", htmlAttributes: new { style = "color:red;" })
        <br />
        <br />
        <label class="d-md-inline col-md-2">Product Price</label>
        @Html.TextBoxFor(p => p.Price, htmlAttributes: new { @class = "d-md-inline col-md-6", min = "1", max = "1000000" })
        @Html.ValidationMessageFor(p => p.Price, "", htmlAttributes: new { style = "color:red;" })
        <br />
        <br />
        <label class="d-md-inline col-md-2">Units in Stock</label>
        @Html.TextBoxFor(p => p.Units, htmlAttributes: new { @class = "d-md-inline col-md-6", min = "0", max = "10000" })
        @Html.ValidationMessageFor(p => p.Units, "", htmlAttributes: new { style = "color:red;" })
        <br />
        <br />
        <label class="d-md-inline col-md-2">Supplier Name</label>
        @Html.DropDownList("SupplierID", null, htmlAttributes: new { @class = "d-md-inline col-md-6", style = "height:48px" })
        @Html.ValidationMessageFor(p => p.SupplierID, "", htmlAttributes: new { style = "color:red;" })
        <br />
        <br />
        <input type="submit" value="Add" class="btn btn-success" />
    }
    <form class="form-row d-flex" action="/Product/update" method="get">
        <div class="col-md-2 d-md-inline"></div>
        <label class="d-md-inline col-md-2">ID</label>
        <input type="text" name="ID" value="@Model.ID" class="d-md-inline col-md-6" readonly />
        <br />
        <br />
        <div class="col-md-2 d-md-inline"></div>
        <label class="d-md-inline col-md-2">Product Name</label>
        <input type="text" name="ProductName" value="@Model.ProductName" class="d-md-inline col-md-6" />
        <br />
        <br />
        <div class="col-md-2 d-md-inline"></div>
        <label class="d-md-inline col-md-2">Product Price</label>
        <input type="text" name="Price" value="@Model.Price" class="d-md-inline col-md-6" />
        <br />
        <br />
        <div class="col-md-2 d-md-inline"></div>
        <label class="d-md-inline col-md-2">Units in Stock</label>
        <input type="text" name="Units" value="@Model.Units" class="d-md-inline col-md-6" />
        <br />
        <br />
        <div class="col-md-2 d-md-inline"></div>
        <label class="d-md-inline col-md-2">Supplier Name</label>
        <input type="text" name="SupplierID" value="@Model.SupplierID" class="d-md-inline col-md-6" />
        <br />
        <br />
        <input type="submit" value="Modify" class="btn btn-success" />
    </form>
</div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval");
}


