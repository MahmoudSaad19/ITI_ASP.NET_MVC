@model IQueryable<CRUD_Operations_with_DB_Context.Models.Product>

<div class="container">
    <div style="height:30px">

    </div>
    <div style="height:70px; text-align:center">
        <h1>Top 3 Units in Stock Products</h1>
    </div>
    <table class="table table-striped table-bordered border-dark text-center">
        <tr class="text-center">
            <th class="text-center">ID</th>
            <th class="text-center">Product Name</th>
            <th class="text-center">Price</th>
            <th class="text-center">Units in Stock</th>
            <th class="text-center">Supplier Name</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.ProductName</td>
                <td>@item.Price</td>
                <td>@item.Units</td>
                <td>@item.Supplier.Name</td>
            </tr>

        }
    </table>
    <div style="height:30px">

    </div>

</div>


