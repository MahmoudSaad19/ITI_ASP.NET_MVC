@model IEnumerable<CRUD_Operations_with_DB_Context.Models.Product>
@{
    ViewBag.Title = "DisplayAll";
}

    <div class="container">
        <div style="height:30px">

        </div>
        <table class="table table-striped table-bordered border-dark text-center">
            <tr class="text-center">
                <th class="text-center">ID</th>
                <th class="text-center">Product Name</th>
                <th class="text-center">Price</th>
                <th class="text-center">Units in Stock</th>
                <th class="text-center">Supplier Name</th>
                <th class="text-center">Modify</th>
                <th class="text-center">Remove</th>
            </tr>
            @if (Response.StatusCode == 200)
            {
                <tr class="text-success display-1">Success</tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.ProductName</td>
                        <td>@item.Price</td>
                        <td>@item.Units</td>
                        <td>@item.Supplier?.Name</td>
                        <td><a href="/product/Update/@item.ID" class="btn btn-default">Modify</a></td>
                        <td><a href="/product/Delete/@item.ID" class="btn btn-danger">Remove</a></td>
                    </tr>

                }
            }

        </table>
        <center>
            <a class="btn btn-success" href="/product/insert">Add New Product</a>
        </center>
        <div style="height:30px">

        </div>

    </div>


