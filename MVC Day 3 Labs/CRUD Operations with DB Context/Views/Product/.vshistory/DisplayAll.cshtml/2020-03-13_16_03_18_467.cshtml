@model ICollection<CRUD_Operations_with_DB_Context.Models.Product>
@{
    ViewBag.Title = "DisplayAll";
}

<div class="container">
    <div style="height:30px">

    </div>
    <table class="table table-striped table-bordered text-center">
        <tr class="text-center">
            <th class="text-center">ID</th>
            <th class="text-center">Product Name</th>
            <th class="text-center">Price</th>
            <th class="text-center">Units in Stock</th>
            <th class="text-center">Supplier Name</th>
            <th class="text-center">Modify</th>
            <th class="text-center">Remove</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.ProductName</td>
                <td>@item.Price</td>
                <td>@item.Units</td>
                <td>@item.SupplierID</td>
                <td><a href="/product/Update/@item.ID" class="btn btn-light">Modify</a></td>
                <td><a href="/product/Delete/@item.ID" class="btn btn-danger">Remove</a></td>
            </tr>

        }
    </table>
    <center>
        <a class="btn btn-success" href="/product/insert">Add New Product</a>
    </center>

</div>


