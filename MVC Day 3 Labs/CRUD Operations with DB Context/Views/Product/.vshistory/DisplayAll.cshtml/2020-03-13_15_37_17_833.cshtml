@model ICollection<CRUD_Operations_with_DB_Context.Models.Product>
@{
    ViewBag.Title = "DisplayAll";
}

<div class="container">
    <table class="table table-striped table-bordered">
        <tr>
            <th>ID</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Units in Stock</th>
            <th>Supplier Name</th>
            <th>Modifiy</th>
            <th>Remove</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.ProductName</td>
                <td>@item.Price</td>
                <td>@item.Units</td>
                <td>@item.SupplierID</td>
                <td><a href="/product/Update/@item.ID" class="btn btn-light">Modifiy</a></td>
                <td><a href="/product/Delete/@item.ID" class="btn btn-danger">Remove</a></td>
            </tr>

        }
    </table>
    <center>
        <a class="btn btn-success" href="/product/insert">Add New Student</a>
    </center>

</div>


