@model CRUD_Operations_with_DB_Context.Models.Product
@{
    ViewBag.Title = "Insert";
}

<div style="height:30px">

</div>
<div style="height:380px; text-align:center;" class="d-flex">
    <form class="form-row d-flex" action="/Product/insert" method="get">       
        <div class="col-md-2 d-md-inline"></div>
        <label class="d-md-inline col-md-2">Product Name</label>
        <input type="text" name="ProductName"  class="d-md-inline col-md-6" />
        <br />
        <br />
        <div class="col-md-2 d-md-inline"></div>
        <label class="d-md-inline col-md-2">Product Price</label>
        <input type="text" name="Price" class="d-md-inline col-md-6" />
        <br />
        <br />
        <div class="col-md-2 d-md-inline"></div>
        <label class="d-md-inline col-md-2">Units in Stock</label>
        <input type="text" name="Units" class="d-md-inline col-md-6" />
        <br />
        <br />
        <div class="col-md-2 d-md-inline"></div>
        <label class="d-md-inline col-md-2">Supplier Name</label>
        <input type="text" name="SupplierID" class="d-md-inline col-md-6" />
        <br />
        <br />
        <input type="submit" value="Add" class="btn btn-success" />
    </form>
</div>

