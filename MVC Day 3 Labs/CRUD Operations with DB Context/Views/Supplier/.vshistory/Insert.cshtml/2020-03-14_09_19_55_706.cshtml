@model CRUD_Operations_with_DB_Context.Models.Supplier
@{
    ViewBag.Title = "Insert";
}

<div style="height:30px">

</div>
<div style="height:180px; text-align:center;" class="d-flex">
    @using (Html.BeginForm("insert", "Supplier", FormMethod.Post, htmlAttributes: new { @class = "form-row d-flex" }))
    {
        <label class="d-md-inline col-md-2">Supplier Name</label>
        @Html.TextBoxFor(p => p.Name, htmlAttributes: new { @class = "d-md-inline col-md-6" })
        @Html.ValidationMessageFor(p => p.Name, "", htmlAttributes: new { style = "color:red;" })
        <br />
        <br />
        <label class="d-md-inline col-md-2">Supplier Price</label>
        @Html.TextBox("City",0, htmlAttributes: new { @class = "d-md-inline col-md-6", min = "1", max = "1000000"})
        @Html.ValidationMessageFor(p => p.City, "", htmlAttributes: new { style = "color:red;" })
        <br />
        <br />        
        <input type="submit" value="Add" class="btn btn-success" />
    }
</div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval");
    }

